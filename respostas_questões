def is_fibonacci(n):
    if n < 0:
        return False
    a, b = 0, 1
    while a < n:
        a, b = b, a + b
    return a == n

def contar_letra_a(s):
    count = s.lower().count('a')
    return count

# 1. Verificar se um número pertence à sequência de Fibonacci
numero = int(input("Digite um número para verificar se pertence à sequência de Fibonacci: "))
if is_fibonacci(numero):
    print(f"O número {numero} pertence à sequência de Fibonacci.")
else:
    print(f"O número {numero} não pertence à sequência de Fibonacci.")




# 2. Verificar a existência e contagem da letra 'a' em uma string
texto = input("Digite uma string para verificar a quantidade de letras 'a': ")
quantidade = contar_letra_a(texto)
print(f"A letra 'a' aparece {quantidade} vezes na string.")





# 3. Resultado do código fornecido
INDICE = 12
SOMA = 0
K = 1

while K < INDICE:
    K = K + 1
    SOMA = SOMA + K

print(f"Resultado do código fornecido: SOMA = {SOMA}")

# 4. Complete o próximo elemento das sequências

# a)
print(f"Próximo número da sequência 1, 3, 5, 7: 9")

